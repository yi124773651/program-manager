{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "程序管理器",
  "version": "1.1.0",
  "identifier": "com.programmanager.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": false
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "程序管理器",
        "width": 1200,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "center": true,
        "dragDropEnabled": true,
        "transparent": true
      }
    ],
    "trayIcon": {
      "id": "main-tray",
      "iconPath": "icons/icon.ico",
      "iconAsTemplate": false,
      "menuOnLeftClick": false,
      "tooltip": "程序管理器"
    },
    "security": {
      "csp": null,
      "capabilities": ["default"]
    }
  }
}
